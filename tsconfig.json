{
  "include": ["./*.ts"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "es2016", 
    "module": "CommonJS",  
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,                          
    "strict": true, 
    "skipLibCheck": true,                                 
    "noImplicitAny": true,
    "sourceMap": true,
  }
}
